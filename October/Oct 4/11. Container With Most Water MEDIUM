// approach 1
class Solution {
    public int maxArea(int[] height) {
        int area = 0;
        int n = height.length;

        for(int i = 0; i < n; i++) {
            for(int j = i + 1; j < n; j++) {
                int h = Math.min(height[i], height[j]);
                int w = j - i;
                area = Math.max(area, h * w);
            }
        }

        return area;
    }
}

// approach 2
class Solution {
    public int maxArea(int[] height) {
        int area = 0;
        int j = height.length - 1, i = 0;

        while (i < j) {
            int h = Math.min(height[i], height[j]);
            int w = j - i;
            area = Math.max(area, h * w);
            if (height[i] < height[j])
                i++;
            else
                j--;
        }

        return area;
    }
}
