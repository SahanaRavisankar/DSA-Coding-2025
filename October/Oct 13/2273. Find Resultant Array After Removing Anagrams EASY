class Solution {
    public List<String> removeAnagrams(String[] words) {
        List<String> list = new ArrayList<>();

        for(String word : words) {
            if (list.size() == 0) {
                list.add(word);
            } else {
                if (!check(list.get(list.size() - 1), word))
                    list.add(word);
            }
        }

        return list;
    }

    boolean check(String a, String b) {
        int[] freq = new int[26];
        for (char ch : a.toCharArray()) {
            freq[ch - 'a']++;
        }
        for (char ch : b.toCharArray()) {
            freq[ch - 'a']--;
        }

        for(int i : freq)
            if(i != 0)
                return false;
        return true;
    }
}
