class Solution {
    public int[] avoidFlood(int[] rains) {
        int n = rains.length;
        int[] ans = new int[n];
        Arrays.fill(ans, 1);
        Map<Integer, Integer> map = new HashMap<>();
        TreeSet<Integer> dry = new TreeSet<>();

        for(int i = 0; i < n; i++) {
            int lake = rains[i];
            if(lake == 0){
                dry.add(i);
            } else {
                ans[i] = -1;
                if(map.containsKey(lake)) {
                    Integer day = dry.higher(map.get(lake));
                    if(day == null)
                        return new int[0];
                    ans[day] = lake;
                    dry.remove(day);
                }
                map.put(lake, i);
            }
        }

        return ans;
    }
}
