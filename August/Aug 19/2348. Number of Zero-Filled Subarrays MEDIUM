class Solution {
    public long zeroFilledSubarray(int[] nums) {
        long result = 0;
        long subarr = 0;
        int i = 0, n = nums.length;

        while (i < n) {
            if (nums[i] == 0) {
                subarr++;
            } else {
                result += cumSum(subarr);
                subarr = 0;
            }

            i++;
        }

        result += cumSum(subarr);

        return result;
    }

    long cumSum(long num) {
        return (num * (num + 1)) / 2;
    }
}
