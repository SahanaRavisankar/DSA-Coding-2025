// approach 1
class Solution {
    public boolean reorderedPowerOf2(int n) {
        char[] ch = String.valueOf(n).toCharArray();
        Arrays.sort(ch);

        for (int i = 0; i < 31; i++) {
            int val = (int) Math.pow(2, i);
            String str = String.valueOf(val);
            if (str.length() == ch.length) {
                char[] temp = str.toCharArray();
                Arrays.sort(temp);
                if (Arrays.equals(temp, ch))
                    return true;
            }
        }

        return false;
    }
}
