// approach 1 - 3 pass solution
class Solution {
    public int[] pivotArray(int[] nums, int pivot) {
        int idx = 0;
        int[] res = new int[nums.length];
        for(int n : nums){
            if(n < pivot){
                res[idx] = n;
                idx++;
            }
        }
        
        for(int n : nums){
            if(n == pivot){
                res[idx] = n;
                idx++;
            }
        }
        
        for(int n : nums){
            if(n > pivot){
                res[idx] = n;
                idx++;
            }
        }

        return res;
    }
}
