// approach 1
class Solution {
    public int[] findMissingAndRepeatedValues(int[][] grid) {
        Set<Integer> set = new HashSet<>();
        int num1 = 0;
        int num2 = 0;
        for(int[] i:grid){
            for(int j:i){
                if(set.contains(j)) num1 = j;
                set.add(j);
            }
        }

        for(int i = 1; i <= grid.length * grid.length; i++){
            if(!set.contains(i)){
                num2 = i;
                break;
            }
        }

        return new int[]{num1, num2};
    }
}
