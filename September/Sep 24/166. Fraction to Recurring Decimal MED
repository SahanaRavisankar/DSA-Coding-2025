class Solution {
    public String fractionToDecimal(int num, int den) {
        if (num == 0)
            return "0";
        StringBuilder res = new StringBuilder();
        if ((long) num * (long) den < 0)
            res.append("-");
        long absnum = Math.abs((long) num);
        long absden = Math.abs((long) den);
        long div = absnum / absden;
        long rem = absnum % absden;

        res.append(String.valueOf(div));
        if (rem == 0) {
            return res.toString();
        }
        res.append(".");

        Map<Long, Integer> map = new HashMap<>();
        while (rem != 0) {
            if (map.containsKey(rem)) {
                int idx = map.get(rem);
                res.insert(idx, "(");
                res.append(")");
                break;
            }
            map.put(rem, res.length());
            rem *= 10;
            long dig = rem / absden;
            res.append(String.valueOf(dig));
            rem = rem % absden;
        }

        return res.toString();
    }
}
