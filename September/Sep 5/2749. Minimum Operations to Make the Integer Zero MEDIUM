class Solution {
    public int makeTheIntegerZero(int num1, int num2) {
        int t = 1;

        while(true) {
            long val = (long) num1 - ((long) t * num2);
            if (val < 0)
                return -1;

            int cnt = getBitCount(val);
            if (cnt <= t && t <= val)
                return t;
            
            t++;
        }
    }

    int getBitCount(long num) {
        int cnt = 0;

        while(num > 0) {
            cnt += num % 2;
            num /= 2;
        }

        return cnt;
    }
}
