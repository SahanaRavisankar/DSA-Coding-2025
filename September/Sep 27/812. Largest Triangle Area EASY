class Solution {
    public double largestTriangleArea(int[][] points) {
        double maxArea = 0;
        int n = points.length;

        for (int i = 0; i < n - 2; i++) {
            for (int j = i + 1; j < n - 1; j++) {
                for (int k = j + 1; k < n; k++) {
                    double area = shoelace(points[i], points[j], points[k]);
                    maxArea = Math.max(area, maxArea);
                }
            }
        }

        return maxArea;
    }

    double shoelace(int[] a, int[] b, int[] c) {
        return Math.abs(a[0] * (b[1] - c[1]) +
        b[0] * (c[1] - a[1]) + c[0] * (a[1] - b[1])) / 2.0;
    }
}
