class Solution {
    public List<Integer> replaceNonCoprimes(int[] nums) {
        List<Integer> res = new ArrayList<>();

        for (int num : nums) {
            while(!res.isEmpty()) {
                int n = res.get(res.size() - 1);
                int gcd = gcd(n, num);
                if (gcd == 1)
                    break;
                res.remove(res.size() - 1);
                long lcm = (long) n / gcd * num;
                num = (int) lcm;
            }
            res.add(num);
        }

        return res;
    }

    int gcd(int a, int b) {
        return b == 0 ? a : gcd(b, a % b);
    }
}
